{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "public",
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "public"],
  "references": [
    {
      "path": "../trpcserver"
    }
  ]
}
