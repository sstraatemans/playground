{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["./types/*"],
      "@server/*": ["./server/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // These are crucial:
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": ["src"],
  "exclude": ["dist"]
}
