{
  "name": "@sstraatemans/sw_trpcserver",
  "description": "tRPC server for Suske en Wiske Playground",
  "version": "0.1.0",
  "author": {
    "name": "Steven Straatemans",
    "email": "steven@sstraatemans.nl",
    "url": "https://straatemans.nl"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/generated/zod/schemas.js",
      "types": "./dist/generated/zod/schemas.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx ./src/server.ts",
    "postinstall": "prisma generate",
    "prebuild": "prisma generate",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "lint": "eslint . --config eslint.config.js",
    "type-check": "tsc --noEmit",
    "seed": "tsx ./prisma/seed/seed.ts",
    "update:album": "tsx ./src/server/update/album.ts",
    "update:character": "tsx ./src/server/update/character.ts",
    "prisma:generate": "prisma generate",
    "prepublishOnly": "pnpm build"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed/seed.ts"
  },
  "peerDependencies": {
    "@trpc/client": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "superjson": "^2.2.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "^6.3.0",
    "@supabase/supabase-js": "^2.80.0",
    "@trpc/client": "^11.7.1",
    "@trpc/server": "^11.7.1",
    "@types/node": "^24.10.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "openai": "^6.8.1",
    "pino": "^10.1.0",
    "prisma": "^6.3.0",
    "prisma-zod-generator": "^1.31.3",
    "superjson": "^2.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  }
}
