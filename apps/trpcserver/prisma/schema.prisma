generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "prisma-zod-generator"
  config   = "./zod-generator.config.json"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id              String    @id
  name            String  
  startYear       String
  endYear         String
  collectionAlbums     CollectionAlbum[] 
  wikiURL         String?
}

model Album {
  id              Int         @id @default(autoincrement())
  title           String
  date            String
  scenarioArtistId Int?
  drawArtistId     Int?
  ScenarioArtist  Artist? @relation("ScenarioArtist", fields: [scenarioArtistId], references: [id])
  DrawArtist      Artist? @relation("DrawArtist", fields: [drawArtistId], references: [id])
  albumCharacters AlbumCharacter[] 
  collectionAlbums     CollectionAlbum[]
  wikiURL         String?
  description     String?
  image           String?
}

model Artist {
  id              Int         @id @default(autoincrement())
  name            String
  scenarioAlbums  Album[]     @relation("ScenarioArtist")
  drawAlbums      Album[]     @relation("DrawArtist")
  wikiURL         String?
  image           String?
}

model Character {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  description     String      @default("")
  years           String      @default("")
  albumsTemp      String      @default("") // needed to connect the albums to the character later
  albumCharacters AlbumCharacter[] 
  wikiURL         String?
}

model AlbumCharacter {
  albumId         Int
  characterId     Int

  album           Album @relation(fields: [albumId], references: [id])
  character       Character @relation(fields: [characterId], references: [id])

  @@id([albumId, characterId])
}

model CollectionAlbum {
  albumId         Int
  collectionId         String
  number          Int
  image           String?
  album           Album @relation(fields: [albumId], references: [id])
  collection      Collection @relation(fields: [collectionId], references: [id])

  @@id([albumId, collectionId])
}