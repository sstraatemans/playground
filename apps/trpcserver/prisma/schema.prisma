generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Serie {
  id              String    @id
  name            String  
  startYear       String
  endYear         String
  serieAlbums     SerieAlbum[] 
}

model Album {
  id              Int         @id @default(autoincrement())
  title           String
  date            String
  scenarioArtistId Int?
  drawArtistId     Int?
  ScenarioArtist  Artist? @relation("ScenarioArtist", fields: [scenarioArtistId], references: [id])
  DrawArtist      Artist? @relation("DrawArtist", fields: [drawArtistId], references: [id])
  albumCharacters AlbumCharacter[] 
  serieAlbums     SerieAlbum[]
}

model Artist {
  id              Int         @id @default(autoincrement())
  name            String
  scenarioAlbums  Album[]     @relation("ScenarioArtist")
  drawAlbums      Album[]     @relation("DrawArtist")
}

model Character {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  description     String      @default("")
  years           String      @default("")
  albumsTemp      String      @default("") // needed to connect the albums to the character later
  albumCharacters AlbumCharacter[] 
}

model AlbumCharacter {
  albumId         Int
  characterId     Int

  album           Album @relation(fields: [albumId], references: [id])
  character       Character @relation(fields: [characterId], references: [id])

  @@id([albumId, characterId])
}

model SerieAlbum {
  albumId         Int
  serieId         String
  number          Int
  album           Album @relation(fields: [albumId], references: [id])
  serie           Serie @relation(fields: [serieId], references: [id])

  @@id([albumId, serieId])
}