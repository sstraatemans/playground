generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Serie {
  id              String    @id
  name            String  
  startYear       String
  endYear         String
  albums          Album[]   @relation("SerieAlbum")
  serieAlbums     SerieAlbum[] 
}

model Album {
  id              Int         @id @default(autoincrement())
  number          Int  
  title           String
  date            String
  characters      Character[]   @relation("AlbumCharacter")
  albumCharacters AlbumCharacter[] 
  series          Serie[]       @relation("SerieAlbum")
  serieAlbums     SerieAlbum[]
}

model Character {
  id              Int         @id @default(autoincrement())
  name            String  
  description     String
  albums          Album[]   @relation("AlbumCharacter")
  albumCharacters AlbumCharacter[] 
}

model AlbumCharacter {
  albumId         Int
  characterId     Int

  album           Album @relation(fields: [albumId], references: [id])
  character       Character @relation(fields: [characterId], references: [id])

  @@id([albumId, characterId])
  @@unique([albumId, characterId])
}

model SerieAlbum {
  albumId         Int
  serieId         String

  album           Album @relation(fields: [albumId], references: [id])
  serie           Serie @relation(fields: [serieId], references: [id])

  @@id([albumId, serieId])
  @@unique([albumId, serieId])
}